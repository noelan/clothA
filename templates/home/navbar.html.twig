<div class="header sticky-top">
  <div class="row justify-content-center bg-white">
    <div class="col-1">
      <a href="{{ path('home') }}"><img class="logo" src="https://image.flaticon.com/icons/png/512/12/12653.png"></a>
    </div>
    <div class="col-2">  
  	 <a href="{{ path('home') }}"><h1 class="funnyShop" style="text-decoration:none;">Funny Shop</h1></a>
    </div>
    <div class="col-1 panierBtn">
      <a class="loginBtn" href="{{ path('show_cart')}}">
        <p>Panier<i class="myBlue fa fa-shopping-cart" style="font-size:18px"></i></p>
      </a>
     </div>
     {% if app.user %}
     <div class="col-1 loginBtn">
      <a class="loginBtn" href="{{ path('app_logout') }}"><p>Se deconnecter <i class="myBlue fas fa-power-off" style="font-size:18px"></i></p></a>
     </div> 
     {% else %} 
    <div class="col-1 loginBtn">
      <a class="loginBtn" href="{{ path('app_login') }}"><p>Se connecter <i class="myBlue fas fa-power-off" style="font-size:18px"></i></p></a>
     </div>
     {% endif %} 
     {% if app.user == null %}
     <div class="col-1 loginBtn">
      <a class="loginBtn" href="{{ path('app_register') }}"><p>S'inscrire <i class="myBlue fas fa-address-book" style="font-size:18px"></i></p></a>
     </div>
     {% endif %}
     {% if is_granted('ROLE_ADMIN') %}
     <div class="col-1 loginBtn">
      <a class="loginBtn" href="{{ path('adminInterface') }}"><p>Admin</p></a>
     </div>  
     {% endif %}
  </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
