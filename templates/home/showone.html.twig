{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
	<div class="row">
		<div class="col-lg-7 col-sm-12 text-center">
			<img class="pictureShowOne" src="{{ article.picture }}">			
		</div>
		<div class="col-lg-5 col-sm-12 showOneDiv">
			<br><br>
			<h2 class="myBlue">{{ article.name }}</h2>
			<p>Prix : {{ article.price }} €</p>	
			<form method="POST" action="{{ path('add_cart', {'id': article.id}) }}"> 
			<p class="justify-content-between">Taille :
				<select name="size">
					{% for size in article.sizes %}
						<option value="{{ size.name }}">{{ size.name }}</option>
					{% endfor %}
				</select>
			</p>	
			<p>Quantité :
			<select name="quantity">	
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
			</p>	
			<button type="submit" class="btn btn-success btn-lg" style="margin-left:3rem;">Ajouter au panier</button>
			</form>
		
			<br><br>
			<h2>Détails du produit :</h2>
			<p>{{ article.description }}</p>		
		</div>
	</div><hr>	
	<h3 class="text-center">Produit que vous pouriez aimer :</h3><br><br>
	<div class="row justify-content-center">
	{% for article in articlesProposition %}
		<div class="col-lg-2 col-sm-12 couldLike">
			<div class="card" style="width: 18rem;border:none;">
				<a href="{{ path('show_one', {'id': article.id}) }}">
					<img src="{{ article.picture }}" class="card-img-top" alt="..." height="365" width="auto">
				</a>
				<div class="card-body">
					<p class=" ellipsis cabin card-text text-center font-weight-bold" style="font-size:2rem;">{{ article.name }}</p>
					<p class="myBlue text-center font-weight-bold" style="font-size:2rem;">{{ article.price }} €</p>
				</div>
			</div>
		</div>
		<div class="col-1">
		</div>
	{% endfor %}
	</div>	
</div>
{% endblock %}