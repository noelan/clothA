{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
	<div class="row">
		<div class="col-7">
			<img src="{{ article.picture }}">
			<br><br>
			<h2>Détails du produit :</h2>
			<p>{{ article.description }}</p>
		</div>
		<div class="col-5">
			<br><br>
			<h3>{{ article.name }}</h3>
			<p>Note : {{ article.note }}</p>
			<p>Prix : {{ article.price }} €</p>
			<h3>Taille</h3>
			<div class="row">
				{% for size in article.size %}
				<div class="col-2 size">
					{{ size }}
				</div>
				{% endfor %}
			</div>
			<h3>Quantité 
				<select>		
					<option>1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
					<option>5</option>
				</select>	
				<button type="button" class="btn btn-success btn-lg" style="margin-left:3rem;">Ajouter au panier</button>
			</h3>	
			
		</div>
	</div><hr>	
	<h3>Produit que vous pouriez aimer</h3>
</div>
{% endblock %}